@model IEnumerable<DTO.DTOEntity.ColorDTO>
@{
    ViewData["Title"] = "ColorList2";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="content product-box-main">
    <div class="wrap">
        <div class="content-right product-box">
            <div class="product-box-head">
                <div class="product-box-head-left">
                    <h3>Color List</h3>
                </div>
                <div class="product-box-head-right">
                    <ul>
                        <li><span>Filters ::</span></li>
                        <li><label> </label> <a href="/Filter/ColorList2/"> Color</a></li>
                        <li><label> </label> <a href="/Filter/SizeList2/"> Size</a></li>
                        <li><label> </label> <a href="/Filter/CurrencyList2/"> Currency</a></li>
                    </ul>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="product-grids">
                @await Html.PartialAsync("/Views/LayoutPartials/ScriptPartial.cshtml")

                @foreach (var item in Model)
                {
                    <ul>
                        <li>
                            <a href="/Style/GetStyleColor/@item.ID/" style="color:black; font-size:20px;">
                                @item.ColorName
                            </a>
                        </li>
                    </ul>
                }

            </div>


            <div class="clear"> </div>
        </div>
    </div>
    <div class="clear"> </div>
</div>

