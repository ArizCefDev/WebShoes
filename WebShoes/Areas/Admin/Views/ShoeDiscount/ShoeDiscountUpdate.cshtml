@model DTO.DTOEntity.ShoeDiscountDTO
@{
    ViewData["Title"] = "ShoeDiscountUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Form Update
                        <span class="tools pull-right">
                            <a class="fa fa-chevron-down" href="javascript:;"></a>
                        </span>
                    </header>
                    <div class="panel-body">
                        <div class=" form">
                            <form class="cmxform form-horizontal " id="commentForm" method="post" novalidate="novalidate">
                                <div class="form-group ">
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="Image1" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image2" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image3" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image4" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image5" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image6" type="hidden">
                                        <input class=" form-control" id="cname" asp-for="Image7" type="hidden">
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Shoe Name</label>
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="Name" type="text">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Shoe Old Price</label>
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="OldPrice" type="text">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Shoe New Price</label>
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="Price" type="text">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Shoe Stock</label>
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="Stock" type="text">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Date</label>
                                    <div class="col-lg-6">
                                        <input class=" form-control" id="cname" asp-for="Date" type="date">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Marka Sport</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownListFor(x=>x.MarkaDiscountID,(IEnumerable<SelectListItem>) ViewBag.m,new {@class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Color</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownListFor(x=>x.ColorID,(IEnumerable<SelectListItem>) ViewBag.c,new {@class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Size</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownListFor(x=>x.SizeID,(IEnumerable<SelectListItem>) ViewBag.s,new {@class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="cname" class="control-label col-lg-3">Currency</label>
                                    <div class="col-lg-6">
                                        @Html.DropDownListFor(x=>x.CurrencyID,(IEnumerable<SelectListItem>) ViewBag.cr,new {@class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="ccomment" class="control-label col-lg-3">Shoe Description</label>
                                    <div class="col-lg-6">
                                        <textarea class="form-control " id="ccomment" asp-for="Description"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-success" type="submit">Update</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

